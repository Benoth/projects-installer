<VirtualHost *:80>

    ServerName {{ item.project }}.dev

    DocumentRoot "{{ item.path }}{{ item.nginx.root is defined | ternary('/','') }}{{ item.nginx.root | default('') }}"

    <Directory {{ item.path }}{{ item.nginx.root is defined | ternary('/','') }}{{ item.nginx.root | default('') }}>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

</VirtualHost>
